<div class="row-fluid">
	<div class="cse-box">
		<div class="row-fluid">
			<%= link_to I18n.t('human.controls.link.new_cse'), cse_new_path(@selected_node), class: 'btn' %>
		</div>
		<div class="row-fluid cse-box-inner">
			<% if @custom_search_engines.all.any? %>
				<%= @custom_search_engines.all.each do |each| %>
					<%= each.specification.title %>
					<%= each.specification.description %>
				<% end %>
			<% else %>
			<div class="cse-box-inner">
				<blockquote>
				  <p><%= I18n.t('human.text.no_cse_yet') %></p>
				  <small><%= I18n.t('human.text.why_create_cse') %></small>
				</blockquote>
			</div>
			<% end %>		
		</div>
	</div>
</div>