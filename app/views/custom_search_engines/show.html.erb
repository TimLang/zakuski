<div class="container-fluid">
	<div class="row-fluid">
		<div class="span8 offset2 well">
			<div class="row-fluid">
				<ul class="breadcrumb">
				    <li><%= I18n.t('human.text.current_node_is') %><span class="divider">&gt;</span></li>
				    <li><%= link_to @selected_node.title, node_show_path(@selected_node) %></li>
				</ul>
			</div>
			<div class="row-fluid">
				<h3><%= @custom_search_engine.specification.title %></h3>
				<div class="row-fluid">
					<div class="cse-grid"><%= link_to @custom_search_engine.user.username, user_path(@custom_search_engine.user) %><span class="divider">•</span><span class="muted"><%=  time_ago_in_words(@custom_search_engine.created_at)%></span>
					</div>
					<div class="cse-grid">
						<blockquote>
  							<p><%= @custom_search_engine.specification.description %></p>
						</blockquote>
					</div>
					<div class="row-fluid">
						<div class="cse-box">
							<div class="row-fluid cse-grid">
								<% @custom_search_engine.annotations.each do |annotation| %>
								<p><%= annotation.about %></p>
								<% end %>
							</div>
							<div class="row-fluid cse-grid">
								<div class="span6 offset3"><a href="javascript:void(0)" class="btn btn-block">连接此搜索引擎以直接使用</a></div>
							</div>
							<div class="row-fluid cse-grid">
								<div class="span6 offset3"><a href="javascript:void(0)" class="btn btn-block">获取此搜索引擎以便自定义</a></div>
							</div>
						</div>
					</div>
				</div>				
			</div>
		</div>
	</div>
</div>
