<div class="row cse-search-box">
  <div class="span7 offset2 cse-search-input">
  <input class="span7" type="text" id="cse-query" placeholder="c++">
</div>
<div class="span2">
  <div class="btn-group">
    <a href="javascript:void(0)" class="btn" id="cse-go"><i class="icon-search"></i> <%= I18n.t("human.controls.link.search") %></a>
    <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
    </a>
  <ul class="dropdown-menu">
  <!-- dropdown menu links -->
  <% @custom_search_engines.each do |cse| %>
  <li class="dropdown-link"><%= link_to cse.specification.title, 'javascript:void(0)', class: 'link-cse' %>
    <%= hidden_field_tag :cseid, cse.id %>
  </li>
  <% end %>
  <% unless @custom_search_engines.any? %>
  <li class="dropdown-link"><a href="javascript:void(0)">Hot1!</a></li>
  <li class="dropdown-link"><a href="javascript:void(0)">Hot2!</a></li>
  <% end %>
  </ul>
  </div>
</div>
</div>
<% content_for :body_bottom_script do %>
<script type="text/javascript">
  (function(){
    $('#cse-query').val('<%= @query %>');
  })();
</script>
<% end %>