<div class="row-fluid cse-container">
<div class="pull-right">
<% if controller_name != 'sessions' %>
  <%= link_to t('human.text.signin'), new_user_session_path %><span class="divider">|</span>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to t('human.text.signup'), new_user_registration_path %><span class="divider">|</span>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
<%= link_to t('human.controls.link.reset_password'), new_user_password_path %><span class="divider">|</span>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<%= link_to t('human.controls.link.need_confirm'), new_user_confirmation_path %>
<% end %>
</div>
</div>
