<div class="container cse-container">
  <div class="row">
    <div class="span10 offset1">
    <div class="row-fluid">
    	<div class="span3">
    		<div class="row-fluid">
    		<%= get_avatar(@user, 'large') %>
    		</div>
  			<div class="row-fluid">
  				<h4><%= @user.username %></h4>
  				<p class="muted"><%= @user.mood %></p>
  				<div class="cse-divider"></div>
  				<p><span class="muted"><%= t('human.text.register_time') %></span>&nbsp;<%= time_ago_in_words(@user.created_at) %></p>
  			</div>
  		</div>
  		<div class="span9">
      	<div class="well">
      		<div class="row-fluid">
      			<span class="label label-important normal-font"><%= t('human.text.cse') %></span>
      		</div>
      		<div class="cse-container-normal">
      			<!-- created cses -->
      			<% if @created_cses.any? %>
	      			<% @created_cses.each do |cse| %>
	      				<p><span class="muted"><%= time_ago_in_words(cse.created_at) %></span>
	      					<%= cse.parent.present? ? t('human.text.clones_and_creates') : t('human.text.creates') %>&nbsp;<%= link_to cse.node.title, node_path(cse.node) %><span class="divider">/</span><%= link_to cse.specification.title, cse_path(cse) %>
	      				</p>
	      			<% end %>
      			<% end %>
      			<!-- keeped cses -->
      			<% if @keeped_cses.any? %>
      			<div class="cse-divider"></div>
	      			<% @keeped_cses.each do |cse| %>
	      				<p><span class="muted"><%= time_ago_in_words(cse.keeped_at) %></span>
	      					<%= t('human.text.keeps') %>&nbsp;<%= link_to cse.node.title, node_path(cse.node) %><span class="divider">/</span><%= link_to cse.specification.title, cse_path(cse) %>
	      				</p>
	      			<% end %>
      			<% end %>
      		</div>
      	</div>
      	<div class="well">
      		<div class="row-fluid">
      			<span class="label label-important normal-font"><%= t('human.text.discussion') %></span>
      		</div>
      		<div class="cse-container-normal">
      		<!-- replies -->
      			<% if @user.replies.recent.any? %>
	      			<% @user.replies.recent.each do |reply| %>
	      			<div class="cse-grid-dashed">
	      				<p><span class="muted"><%= time_ago_in_words(reply.created_at) %></span>
	      					<%= t('human.text.replies') %>&nbsp;<%= link_to reply.custom_search_engine.node.title, node_path(reply.custom_search_engine.node) %><span class="divider">/</span><%= link_to reply.custom_search_engine.specification.title, cse_path(reply.custom_search_engine) %>
	      				</p>
	      				<p><%= simple_text(reply.body) %></p>
	      			</div>
	      			<% end %>
      			<% end %>
      		</div>
      	</div>
      </div>
    </div>
  </div>
</div>