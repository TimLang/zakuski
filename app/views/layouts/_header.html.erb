<header>
<div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse">
            <ul class="nav pull-right">
              <li><%= link_to I18n.t('human.text.sns'), nodes_path %></li>
              <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.username %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to I18n.t('human.text.my_cse'), cses_path %></li>
                  <li><%= link_to I18n.t('human.text.profile'), current_user %></li>
                  <li><%= link_to I18n.t('human.text.setting'), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to I18n.t('human.text.sign_out'), signout_path, method: 'delete' %></li>
                </ul>
              </li>
              <% else %>
              <li>
                <%= link_to I18n.t("human.controls.link.signup"), signup_path %>
              </li>
              <li class="divider-vertical"></li>
              <li>
              <a href="<%= signin_path %>" class="dropdown-toggle" data-toggle="dropdown"><%= I18n.t("human.controls.link.signin") %> <i class="icon-user icon-white"></i></a>
              </li>
              <% end %>
            </ul>
            <ul class="nav">
              <li class="active"><a href="<%= root_path %>"><%= I18n.t("human.controls.link.home") %></a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
</header>